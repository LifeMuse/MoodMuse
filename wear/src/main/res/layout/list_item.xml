<?xml version="1.0" encoding="utf-8"?>
<com.shtaigaway.moodmuse.WearableListItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/mood_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="25dp"
        android:contentDescription="@string/mood_image_description" />

    <TextView
        android:id="@+id/mood_message"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="-4sp"
        android:textColor="@color/white"
        android:textSize="22sp" />
</com.shtaigaway.moodmuse.WearableListItemLayout>